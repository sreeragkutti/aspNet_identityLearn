@model Identity_MVC.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary();
        <br />
        @Html.LabelFor(un => un.Username) @Html.TextBoxFor(un => un.Username);
        <br />
        @Html.LabelFor(pw => pw.Password) @Html.TextBoxFor(pw => pw.Password);

        <input type="submit" value="Register" />

    }
</div>

